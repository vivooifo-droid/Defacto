#Mainprogramm.start
#NO_RUNTIME
#SAFE

// Тест драйверов v0.40

<drv.
Const.driver = keyboard_driver
keyboard_driver <<func = keyboard>>
.dr>

<.de
    var title: string = "=== Driver Test ==="
    var msg: string = "Keyboard driver loaded"
    var key: i32 = 0
    var nl: string = ""
    
    static.pl>
    
    display{title}
    display{nl}
    display{msg}
    display{nl}
    
    // Вызов драйвера
    call #keyboard_driver
    
    // Чтение клавиши
    readkey{key}
    
    display{nl}
    display{key}
    display{nl}
    display{title}
.>

#Mainprogramm.end
