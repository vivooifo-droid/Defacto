#Mainprogramm.start
#NO_RUNTIME
#SAFE

// Новый синтаксис драйверов в Defacto v0.44+
driver keyboard {
    type = keyboard
}

fn main {
    <.de
        var key: i32 = 0
        var msg: string = "Press a key"
        var prompt: string = "You pressed: "

        display{msg}
        call #keyboard
        display{prompt}
        display{key}
    .>
}

#Mainprogramm.end
