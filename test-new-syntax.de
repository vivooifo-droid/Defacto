#Mainprogramm.start
#NO_RUNTIME
#SAFE

struct Point {
    x: i32
    y: i32
    z: i32
}

struct Player {
    pos: i32
    score: i32
    health: i32
}

<drv.
Const.driver = keyboard_driver
keyboard_driver <<func = keyboard>>
.dr>

<.de
    var title: string = "=== Defacto Test ==="
    var counter: i32 = 10
    var value: i32 = 0
    var key: i32 = 0
    var ch: i32 = 0
    var p: Point
    var player: Player

    static.pl>

    display{title}

    counter = 5
    if counter == 5 {
        value = 100
    } else {
        value = 0
    }

    loop {
        if counter == 0 { stop }
        counter = (counter - 1)
    }

    call #keyboard_driver

    readchar{ch}

    p.x = 10
    p.y = 20
    p.z = 30

    player.pos = 1
    player.score = 500
    player.health = 100

    display{ch}

    value = (value + 1)
    value = (value * 2)
.>

#Mainprogramm.end
